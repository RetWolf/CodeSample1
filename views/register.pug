extends layout

block content
  div.grid-Container-Short
    h1(class='centered-Title-Short')=title
    nav.grid-Nav-TopLeft
      a.navLink(href = '/') Home
      a.navLink(href = '/users/login') Login
    section.grid-Centered-Section-Extended
     div.form-Styling
       form(action="/users/register" method="post")
         label(for="name") Name
         input(type="text" id="name" name="name" placeholder="Your Name")
         label(for="email") Email
         input(type="email" id="email" name="email" placeholder="Email")
         label(for="password") Passwords
         input(type="password" id="password" name="password" placeholder="Password")
         input(type="password" id="passwordCheck" name="passwordCheck" placeholder="Password Again")
         button(type="submit") Submit
    footer.centered-Footer-Short
